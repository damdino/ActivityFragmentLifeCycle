<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.androidedu.kodluyoruzakademi.activityfragmentlifecycle.MainActivity">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <fragment
            android:id="@+id/fragment"
            android:name="com.androidedu.kodluyoruzakademi.activityfragmentlifecycle.AFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <fragment
            android:id="@+id/fragment2"
            android:name="com.androidedu.kodluyoruzakademi.activityfragmentlifecycle.BFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />

        <LinearLayout
            android:id="@+id/LL"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#39beaa"
            android:orientation="horizontal" />

    </LinearLayout>


</LinearLayout>
